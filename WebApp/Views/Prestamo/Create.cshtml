@model WebApp.ViewModels.Prestamo

@{
    ViewData["Title"] = "Crear Prestamo de Libro";
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <strong>Crear Prestamo</strong>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="IdLector" class="control-label"></label>
                        <select asp-for="IdLector" class="form-control" asp-items="ViewBag.Estudiantes"></select>
                        <span asp-validation-for="IdLector" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdLibro" class="control-label"></label>
                        <select asp-for="IdLibro" class="form-control" asp-items="ViewBag.Libros"></select>
                        <span asp-validation-for="IdLibro" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaPrestamo" class="control-label"></label>
                        <input asp-for="FechaPrestamo" class="form-control" />
                        <span asp-validation-for="FechaPrestamo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaDevolucion" class="control-label"></label>
                        <input asp-for="FechaDevolucion" class="form-control" />
                        <span asp-validation-for="FechaDevolucion" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Devuelto" /> @Html.DisplayNameFor(model => model.Devuelto)
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" /> |
                        <a asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
